<%- include('../partials/header', { title: title || 'Join Environment', username }) %>

<div class="container page-content">
  <h4>Join Environment</h4>
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>
  <form action="/environments/join" method="POST" class="mt-3">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="mb-3">
      <label for="inviteCode" class="form-label">Invite Code</label>
      <input type="text" class="form-control" id="inviteCode" name="inviteCode" placeholder="Enter invite code" autocomplete="off" required>
    </div>
    <div class="d-flex gap-2">
      <button type="submit" class="btn btn-primary">Join</button>
      <a href="/environments" class="btn btn-secondary">Back</a>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>
