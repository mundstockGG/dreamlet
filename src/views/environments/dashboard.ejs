<%- include('../partials/header', { title: 'Dashboard', username }) %>
<div class="container page-content">
  <h4 class="mb-4"><%= t.dashboard.welcome %>, <strong><%= username %></strong>!</h4>
  <div class="row">
    <div class="col-md-6 mb-3">
      <div class="card">
        <div class="card-body">
          <a href="/environments" class="btn btn-primary">
            <i class="bi bi-list-ul me-1"></i><%= t.dashboard.manage_environments %>
          </a>
        </div>
      </div>
    </div>
    <div class="col-md-6 mb-3">
      <div class="card">
        <div class="card-body" style="justify-content: flex-start;">
          <!-- flex‐row for title + button -->
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title mb-0"><%= t.dashboard.friends_list %></h5>
            <button class="btn btn-sm" title="Add Friend" style="width:2.2rem; height:2.2rem; display:flex; align-items:center; justify-content:center; background-color:#FCFCFC; color:#222; border:1px solid #222;">
              <i class="bi bi-plus-lg"></i>
            </button>
          </div>

          <!-- now the “no friends” text sits below -->
          <p class="text-muted mb-0"><%= t.dashboard.no_friends %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>