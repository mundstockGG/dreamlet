<%- include('../partials/header', { title: env.name, username, lang, t }) %>
<div class="container page-content">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">
      <%= env.name %>
      <% if (env.isNSFW) { %>
      <i class="bi bi-fire text-danger ms-1" style="cursor:pointer;" data-bs-toggle="tooltip" title="NSFW: This environment is not safe for work.\nIt is intended for adults and may contain mature, explicit, or sensitive content.\nPlease join only if you are of legal age and comfortable with adult themes."></i>
      <% } else { %>
      <i class="bi bi-globe-americas ms-1" style="color:#FCFCFC; cursor:pointer;" data-bs-toggle="tooltip" title="SFW: This environment is safe for work.\nOnly general, non-explicit, and family-friendly roleplay is allowed.\nMature or adult content is strictly prohibited."></i>
      <% } %>
    </h4>
    <form action="/environments/<%= env.id %>/lock" method="POST" class="ms-3 d-flex align-items-center">
      <label class="form-check form-switch mb-0" title="<%= t.environment.lock %>">
        <input class="form-check-input" type="checkbox" name="isLocked" onchange="this.form.submit()" <%= env.isLocked ? 'checked' : '' %>>
        <span class="ms-2"><%= t.environment.lock %></span>
      </label>
    </form>
  </div>

  <div class="card mb-3">
    <div class="card-body">
      <p class="text-secondary small"><%= t.environment.invite_code %>: <strong><%= env.inviteCode || 'â€” none â€”' %></strong></p>
      <p class="text-secondary small"><%= t.environment.locked %>: <strong><%= env.isLocked ? t.environment.yes : t.environment.no %></strong></p>
    </div>
  </div>

  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= t.environment.members %></h5>
      <ul class="list-group">
        <% members.forEach(m => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= m.username %> <em>(<%= t.environment.role %>: <%= m.role %>)</em></span>
          <% if (env.isOwner && m.role === 'member') { %>
          <span>
            <form action="/environments/<%= env.id %>/members/<%= m.id %>/kick" method="POST" style="display:inline; margin-right:0.25rem;">
              <button type="submit" class="btn btn-sm btn-place-action" title="<%= t.environment.kick %>" onclick="return confirm('<%= t.environment.kick %> <%= m.username %>?');">
                View
              </button>
            </form>
            <form action="/environments/<%= env.id %>/members/<%= m.id %>/ban" method="POST" style="display:inline; margin-right:0.25rem;">
              <button type="submit" class="btn btn-sm btn-place-action" title="<%= t.environment.ban %>" onclick="return confirm('<%= t.environment.ban %> <%= m.username %>?');">
                Edit
              </button>
            </form>
            <form action="/environments/<%= env.id %>/members/<%= m.id %>/mute" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-sm btn-place-action" title="<%= t.environment.mute %>" onclick="return confirm('<%= t.environment.mute %> <%= m.username %>?');">
                Delete
              </button>
            </form>
          </span>
          <% } %>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>

  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= t.environment.places %></h5>
      <% if (places.length === 0) { %>
      <p class="text-secondary small"><%= t.environment.no_places %></p>
      <% } else { %>
      <ul class="list-group">
        <% places.forEach(p => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span>
            <%= p.emoji %> <%= p.name %> <% if (p.parentName) { %><small>in <%= p.parentName %></small><% } %>
          </span>
          <span>
            <% if (p.id !== env.id) { %>
              <a href="/environments/<%= env.id %>/places/<%= p.id %>/edit" class="btn btn-sm btn-place-action" title="<%= t.environment.edit %>">
                <%= t.environment.edit %>
              </a>
              <form action="/environments/<%= env.id %>/places/<%= p.id %>/delete" method="POST" style="display:inline; margin:0;">
                <button type="submit" class="btn btn-sm btn-place-action" title="<%= t.environment.delete %>" onclick="return confirm('Are you sure you want to delete this place?');">
                  <%= t.environment.delete %>
                </button>
              </form>
            <% } %>
          </span>
        </li>
        <% }) %>
      </ul>
      <% } %>
      <a href="#" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#createPlaceModal">
        <i class="bi bi-plus-lg me-1"></i><%= t.environment.create_place %>
      </a>
    </div>
  </div>

  <div class="modal fade" id="createPlaceModal" tabindex="-1" aria-labelledby="createPlaceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="createPlaceModalLabel"><%= t.environment.create_new_place %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="<%= t.environment.close %>"></button>
        </div>
        <div class="modal-body">
          <% if (error) { %>
          <p class="text-danger"><%= error %></p>
          <% } %>
          <form action="/environments/<%= env.id %>/places" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label for="place-name" class="form-label"><%= t.environment.name %></label>
              <input type="text" class="form-control" id="place-name" name="name" required>
            </div>
            <div class="mb-3">
              <label for="place-emoji" class="form-label"><%= t.environment.emoji %></label>
              <div class="input-group" style="position:relative;">
                <input type="text" class="form-control" id="place-emoji" name="emoji" placeholder="ðŸ " required readonly>
                <button type="button" class="btn btn-outline-secondary" id="emoji-picker-btn">
                  <i class="bi bi-emoji-smile"></i>
                </button>
                <div id="emoji-picker-container" style="position:absolute;z-index:9999;left:0;top:100%;display:none;"></div>
              </div>
            </div>
            <div class="mb-3">
              <label for="parentId" class="form-label"><%= t.environment.parent %></label>
              <select class="form-select" name="parentId">
                <option value="" selected><%= t.environment.top_level %></option>
                <% parentPlaces.forEach(p => { %>
                  <option value="<%= p.id %>"><%= p.name %></option>
                <% }) %>
              </select>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t.environment.close %></button>
          <button type="submit" class="btn btn-primary" style="background-color:#FCFCFC; border-color:#FCFCFC; color:#0f1012;"><%= t.environment.create_place %></button>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-end">
    <a href="/environments" class="btn btn-secondary mt-4 mb-3">
      <i class="bi bi-arrow-left me-1"></i><%= t.environment.back %>
    </a>
    <form id="delete-env-form" action="/environments/<%= env.id %>/delete" method="POST" class="d-inline-block ms-2">
      <button type="button" class="btn btn-danger mt-4 mb-3 ms-2" onclick="showDeleteEnvPrompt()">
        <i class="bi bi-trash me-1"></i><%= t.environment.delete_environment %>
      </button>
      <div id="delete-env-prompt" style="display:none; margin-top:10px;">
        <p><%= t.environment.confirm_delete_env %> <strong><%= env.name %></strong></p>
        <input type="text" class="form-control mb-2" id="delete-env-confirm" placeholder="Type environment name to confirm">
        <button type="submit" class="btn btn-danger" id="delete-env-confirm-btn" disabled><%= t.environment.confirm %></button>
        <button type="button" class="btn btn-secondary ms-2" onclick="hideDeleteEnvPrompt()"><%= t.environment.cancel %></button>
      </div>
    </form>
  </div>
</div>
<%- include('../partials/footer') %>
<script src="https://unpkg.com/emoji-mart@latest/dist/browser.js"></script>
<script>
  const btn = document.getElementById('emoji-picker-btn');
  const input = document.getElementById('place-emoji');
  const container = document.getElementById('emoji-picker-container');
  let pickerVisible = false;
  let picker;

  btn.addEventListener('click', (e) => {
    e.preventDefault();
    if (!pickerVisible) {
      picker = new window.EmojiMart.Picker({
        onEmojiSelect: (emoji) => {
          input.value = emoji.native;
          container.innerHTML = '';
          container.style.display = 'none';
          pickerVisible = false;
        },
        theme: 'light',
        previewPosition: 'none',
      });
      container.innerHTML = '';
      container.appendChild(picker);
      container.style.display = 'block';
      pickerVisible = true;
    } else {
      container.innerHTML = '';
      container.style.display = 'none';
      pickerVisible = false;
    }
  });
  window.addEventListener('mousedown', function(e) {
    if (pickerVisible && !container.contains(e.target) && e.target !== btn) {
      container.innerHTML = '';
      container.style.display = 'none';
      pickerVisible = false;
    }
  });
</script>
<script>
    var envName = "<%= env.name %>"; // Corrected syntax for embedding environment name
    function showDeleteEnvPrompt() {
      document.getElementById('delete-env-prompt').style.display = '';
    }
    function hideDeleteEnvPrompt() {
      document.getElementById('delete-env-prompt').style.display = 'none';
      document.getElementById('delete-env-confirm').value = '';
      document.getElementById('delete-env-confirm-btn').disabled = true;
    }
    document.addEventListener('DOMContentLoaded', function() {
      var input = document.getElementById('delete-env-confirm');
      var btn = document.getElementById('delete-env-confirm-btn');
      if (input && btn) {
        input.addEventListener('input', function() {
          btn.disabled = (input.value !== envName);
        });
      }
    });
  </script>