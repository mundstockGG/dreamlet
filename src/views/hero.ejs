<script>
  document.addEventListener('DOMContentLoaded', function() {
    setTimeout(function() {
      document.querySelectorAll('.fly-in-text').forEach(function(fly) {
        fly.classList.remove('hidden');
      });
      setTimeout(function() {
        var fade = document.querySelector('.hero-fade-in');
        if(fade) fade.style.opacity = 1;
      }, 500); // 1.4s after flying text
    }, 500);
  });
</script>
