<%- include('../partials/header', { title: 'Changelog', username }) %>
<div class="container mt-5">
  <h1 class="mb-4">Changelog</h1>
  <% if (changelogs && changelogs.length) { %>
    <% changelogs.forEach(function(log) { %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= log.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= log.date.toLocaleDateString() %></h6>
          <div class="card-text"><%- log.content %></div>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <p>No changelog entries found.</p>
  <% } %>
</div>
<%- include('../partials/footer') %>