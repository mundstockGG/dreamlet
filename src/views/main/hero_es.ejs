<%- include('../partials/header', { title: 'Inicio' }) %>
<main>
  <section class="hero">
    <div class="bg"></div>
    <div class="hero-overlay"></div>
    <div class="container hero-content text-center">
      <small class="pretitle" style="display:block;">
        <ul class="fly-in-text hidden" style="display:inline-flex;vertical-align:middle;padding:0;margin:0;">
          <li>B</li><li>I</li><li>E</li><li>N</li><li>V</li><li>E</li><li>N</li><li>I</li><li>D</li><li>O</li><li>S</li>
        </ul>
      </small>
      <h1 class="display-1">
        <span class="highlight" style="display:inline-block;">
          <ul class="fly-in-text fly-h1 hidden" style="display:inline-flex;vertical-align:middle;padding:0;margin:0;">
            <li>d</li><li>r</li><li>e</li><li>a</li><li>m</li><li>l</li><li>e</li><li>t</li>
          </ul>
        </span>
      </h1>
