<%- include('partials/header', { title: 'Pricing', username }) %>
<main class="page-content container text-center">
  <h1 class="display-4 mb-4">Pricing</h1>
  <p class="lead text-muted">Simple, transparent pricing for every group of friends.</p>
  <div class="row justify-content-center mt-5">
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body pricing-card-body">
          <h2 class="card-title">Basic</h2>
          <ul class="list-unstyled mb-3">
            <li>Up to 4 environments</li>
            <li>Up to 10 members per environment</li>
            <li>Up to 10 places</li>
            <li>No emoji support</li>
            <li>Basic moderation</li>
            <li>Community support</li>
            <li>Basic analytics</li>
            <li>Standard security</li>
            <li>Private & public environments</li>
            <li>Basic dice only</li>
          </ul>
          <h3 class="mb-3"><span class="currency">Free</span></h3>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body pricing-card-body">
          <h2 class="card-title">Pro</h2>
          <ul class="list-unstyled mb-3">
            <li>Unlimited environments and places</li>
            <li>More than 10 members per environment</li>
            <li>Emoji support</li>
            <li>Advanced moderation</li>
            <li>Priority support</li>
            <li>Advanced analytics & reports</li>
            <li>Enhanced security</li>
            <li>Private & public environments</li>
            <li>Custom branding</li>
            <li>Early access to new features</li>
            <li>Up to 7 types of dice</li>
          </ul>
          <h3 class="mb-3"><span class="currency">$4.99</span><span class="fs-6">/mo</span></h3>
        </div>
      </div>
    </div>
  </div>
</main>
<%- include('partials/footer') %>
